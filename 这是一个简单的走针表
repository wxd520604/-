<body>
    <!-- 表盘部份 -->
    <div class="biaopan">
        <!-- 刻度部分 -->
        <div class="kedu">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
